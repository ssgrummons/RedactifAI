# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Storage (choose one backend)
STORAGE_BACKEND=s3

# S3/MinIO Configuration
S3_ENDPOINT_URL=http://localhost:9000
S3_BUCKET=redactifai
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# Azure Blob Storage Configuration (if using azure backend)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=redactifai

# Local Storage Configuration (if using local backend)
LOCAL_STORAGE_PATH=/tmp/redactifai

# Database
DATABASE_URL=postgresql+asyncpg://redactifai:redactifai@localhost:5432/redactifai
# For SQLite (dev/testing):
# DATABASE_URL=sqlite+aiosqlite:///./redactifai.db

# Azure Document Intelligence (REQUIRED for PHI detection)
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-instance.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-key-here

# Celery/Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Processing Configuration
MAX_FILE_SIZE_MB=50
MASKING_PADDING_PX=5
MAX_RETRIES=3
RETRY_BACKOFF_BASE=2.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json